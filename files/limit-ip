#!/bin/bash

LOCK_FILE="/tmp/multi_login_lock"

function is_locked() {
    [[ -e "$LOCK_FILE" ]]
}

function lock() {
    touch "$LOCK_FILE"
}

function unlock() {
    rm -f "$LOCK_FILE"
}

function send_log() {
    KEY="7253550837:AAEZbitnFTqwNmBqCuvybJfaxHKgYb7FrZ4"
    CHATID="6579436198"
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"

    local user=$1
    local iplimit=$2
    local cekcek=$3

    isp=$(cat /etc/xray/isp)
    domain=$(cat /etc/xray/domain)

    ip_list=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort -r | uniq)

    TEXT="
    <code>────────────────────</code>
    <b>⚠️ NOTIFICATIONS MULTI LOGIN XRAY ⚠️</b>
    <code>────────────────────</code>
    <code>ISP    : ${isp}</code>
    <code>Domain : ${domain}</code>
    <code>────────────────────</code>
    <code>Username        : ${user}</code>
    <code>Limit IP        : ${iplimit}</code>
    <code>Login IP Count  : ${cekcek}</code>
    <code>────────────────────</code>
    <code>Detail IP Login :</code>
    $(echo "$ip_list" | sed 's/^/<code>/; s/$/<\/code>/')
    <code>────────────────────</code>
    <code>Status          : Akun terkunci</code>
    <code>────────────────────</code>
    "

    curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
}

function disable_user() {
    local user=$1
    local service=$2
    local temp_disabled_file="/tmp/disabled_users_${service}"
    echo "$user" >> "$temp_disabled_file"

    # Menonaktifkan pengguna di layanan yang sesuai
    exp=$(grep -w "^### $user" "/etc/xray/config.json" | cut -d ' ' -f 3 | sort | uniq)
    sed -i "/^### $user $exp/,/^},{/d" /etc/xray/config.json
    sed -i "/^### $user $exp/d" "/etc/kyt/${service}/.${service}.db"
}

function enable_users() {
    local service=$1
    local temp_disabled_file="/tmp/disabled_users_${service}"

    if [[ -e "$temp_disabled_file" ]]; then
        for user in $(cat "$temp_disabled_file"); do
            echo "Mengaktifkan kembali pengguna $user"
            echo "$user" > "/etc/kyt/limit/${service}/ip/$user"
        done
        rm -f "$temp_disabled_file"
        systemctl restart "$service"
    fi
}

function vmip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 60
    data=( $(ls /etc/kyt/limit/vmess/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/vmess/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            disable_user "$user" "vmess"
            send_log "$user" "$iplimit" "$cekcek"
        else
            echo ""
        fi
        sleep 0.1
    done

    systemctl restart vmip

    sleep 900  # Tidur selama 15 menit
    enable_users "vmess"

    unlock
}

function vlip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 60
    data=( $(ls /etc/kyt/limit/vless/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/vless/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            disable_user "$user" "vless"
            send_log "$user" "$iplimit" "$cekcek"
        else
            echo ""
        fi
        sleep 0.1
    done

    systemctl restart vlip

    sleep 900  # Tidur selama 15 menit
    enable_users "vless"

    unlock
}

