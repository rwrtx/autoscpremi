#!/bin/bash

LOCK_FILE="/tmp/multi_login_lock"

function is_locked() {
    [[ -e "$LOCK_FILE" ]]
}

function lock() {
    touch "$LOCK_FILE"
}

function unlock() {
    rm -f "$LOCK_FILE"
}

function send_log() {
    KEY="7253550837:AAEZbitnFTqwNmBqCuvybJfaxHKgYb7FrZ4"
    CHATID="6579436198"
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"

    local user=$1
    local iplimit=$2
    local cekcek=$3

    isp=$(cat /etc/xray/isp)
    domain=$(cat /etc/xray/domain)

    ip_list=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort -r | uniq)

    TEXT="
    <code>────────────────────</code>
    <b>⚠️ NOTIFICATIONS MULTI LOGIN XRAY ⚠️</b>
    <code>────────────────────</code>
    <code>ISP    : ${isp}</code>
    <code>Domain : ${domain}</code>
    <code>────────────────────</code>
    <code>Username        : ${user}</code>
    <code>Limit IP        : ${iplimit}</code>
    <code>Login IP Count  : ${cekcek}</code>
    <code>────────────────────</code>
    <code>Detail IP Login :</code>
    $(echo "$ip_list" | sed 's/^/<code>/; s/$/<\/code>/')
    <code>────────────────────</code>
    <code>Status          : Akun terkunci</code>
    <code>────────────────────</code>
    "

    curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
}

function vmip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 60
    data=( $(ls /etc/kyt/limit/vmess/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/vmess/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "^### $user" "/etc/xray/config.json" | cut -d ' ' -f 3 | sort | uniq)
            sed -i "/^### $user $exp/,/^},{/d" /etc/xray/config.json
            sed -i "/^### $user $exp/d" /etc/kyt/vmess/.vmess.db
            systemctl restart xray >> /dev/null 2>&1
            echo "$user" >> /tmp/disabled_users_vmess
            send_log "$user" "$iplimit" "$cekcek"
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit

    for user in $(cat /tmp/disabled_users_vmess); do
        echo "Mengaktifkan kembali pengguna $user"
        echo "$user" > /etc/kyt/limit/vmess/ip/$user
    done

    rm -f /tmp/disabled_users_vmess
    unlock
}

function vlip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 60
    data=( $(ls /etc/kyt/limit/vless/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/vless/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "^#& $user" "/etc/xray/config.json" | cut -d ' ' -f 3 | sort | uniq)
            sed -i "/^#& $user $exp/,/^},{/d" /etc/xray/config.json
            sed -i "/^#& $user $exp/d" /etc/kyt/vless/.vless.db
            systemctl restart xray >> /dev/null 2>&1
            echo "$user" >> /tmp/disabled_users_vless
            send_log "$user" "$iplimit" "$cekcek"
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit

    for user in $(cat /tmp/disabled_users_vless); do
        echo "Mengaktifkan kembali pengguna $user"
        echo "$user" > /etc/kyt/limit/vless/ip/$user
    done

    rm -f /tmp/disabled_users_vless
    unlock
}

function trip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 60
    data=( $(ls /etc/kyt/limit/trojan/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/trojan/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "#! $user" "/etc/xray/config.json" | cut -d ' ' -f 3 | sort | uniq)
            sed -i "/^#! $user $exp/,/^},{/d" /etc/xray/config.json
            sed -i "/^### $user $exp/d" /etc/kyt/trojan/.trojan.db
            systemctl restart xray >> /dev/null 2>&1
            echo "$user" >> /tmp/disabled_users_trojan
            send_log "$user" "$iplimit" "$cekcek"
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit

    for user in $(cat /tmp/disabled_users_trojan); do
        echo "Mengaktifkan kembali pengguna $user"
        echo "$user" > /etc/kyt/limit/trojan/ip/$user
    done

    rm -f /tmp/disabled_users_trojan
    unlock
}

function shadowsocks() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 60
    data=( $(ls /etc/kyt/limit/shadowsocks/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/shadowsocks/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "#! $user" "/etc/xray/config.json" | cut -d ' ' -f 3 | sort | uniq)
            sed -i "/^#! $user $exp/,/^},{/d" /etc/xray/config.json
            sed -i "/^### $user $exp/d" /etc/kyt/shadowsocks/.shadowsocks.db
            systemctl restart xray >> /dev/null 2>&1
            echo "$user" >> /tmp/disabled_users_shadowsocks
            send_log "$user" "$iplimit" "$cekcek"
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit

    for user in $(cat /tmp/disabled_users_shadowsocks); do
        echo "Mengaktifkan kembali pengguna $user"
        echo "$user" > /etc/kyt/limit/shadowsocks/ip/$user
    done

    rm -f /tmp/disabled_users_shadowsocks
    unlock
}

# Memanggil fungsi yang sesuai berdasarkan argumen yang diberikan
if [[ ${1} == "vmip" ]]; then
    vmip
elif [[ ${1} == "vlip" ]]; then
    vlip
elif [[ ${1} == "trip" ]]; then
    trip
elif [[ ${1} == "shadowsocks" ]]; then
    shadowsocks
fi
