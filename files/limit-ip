#!/bin/bash

LOCK_FILE="/tmp/multi_login_lock"
CHECK_INTERVAL=300  # Waktu cek ulang dalam detik (5 menit)
WAIT_TIME=360       # Waktu kunci dalam detik (15 menit)
TEMP_IP_FILE="/tmp/temp_ips.txt"

function is_locked() {
    [[ -e "$LOCK_FILE" ]]
}

function lock() {
    touch "$LOCK_FILE"
}

function unlock() {
    rm -f "$LOCK_FILE"
}

function send_log() {
    CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
    KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"
    isp=$(cat /etc/xray/isp)
    domain=$(cat /etc/xray/domain)
    status="$1"
    TEXT="
<code>────────────────────</code>
<b>⚠️ NOTIFICATIONS MULTI LOGIN XRAY ⚠️</b>
<code>────────────────────</code>
<code>ISP    : ${isp}</code>
<code>Domain : ${domain}</code>
<code>────────────────────</code>
<code>Username        : ${user}</code>
<code>Limit IP        : ${iplimit}</code>
<code>Login IP Count  : ${cekcek}</code>
<code>────────────────────</code>
<code>Detail IP Login : </code>
$(echo -e "$ehh" | sed 's/^/<code>/;s/$/<\/code>/')
<code>────────────────────</code>
<code> ${status}</code>
<code>────────────────────</code>
"
    curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
}

function process_ip_violations() {
    protocol=$1
    config_file=$2
    db_file=$3
    ip_limit_dir="/etc/kyt/limit/$protocol/ip"
    log_file="/var/log/xray/access.log"
    temp_ip_file="/tmp/${protocol}_violations.txt"

    echo -n > $temp_ip_file

    data=( $(ls $ip_limit_dir) )
    for user in "${data[@]}"; do
        iplimit=$(cat "$ip_limit_dir/$user")
        ehh=$(grep "$user" $log_file | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)
        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "^### $user" "$config_file" | cut -d ' ' -f 3 | sort | uniq)
            # Record IPs and user's state
            echo "$user" >> $temp_ip_file
            echo -e "$ehh" >> $temp_ip_file

            send_log "Terkunci Selama 15 Menit"
            sleep $WAIT_TIME
            systemctl restart xray >> /dev/null 2>&1

            # Restore IPs if user is still in violation
            updated_ehh=$(grep "$user" $log_file | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
            for ip in $(cat $temp_ip_file | grep -v "^$user$"); do
                if [[ ! $updated_ehh =~ $ip ]]; then
                    echo $ip >> $temp_ip_file
                fi
            done

            # Remove user limit file to allow login again
            rm -rf "$ip_limit_dir/$user"
            systemctl restart xray >> /dev/null 2>&1
            send_log "Terunlock"

            # Clear temp file
            echo -n > $temp_ip_file
        fi
        sleep 0.1
    done
}

function vmip() {
    if is_locked; then
        echo "Another process is already running. Exiting..."
        exit 1
    fi
    lock

    echo -n > /var/log/xray/access.log
    sleep 10
    process_ip_violations "vmess" "/etc/xray/config.json" "/etc/vmess/vmess.db"

    unlock
}

function vlip() {
    if is_locked; then
        echo "Another process is already running. Exiting..."
        exit 1
    fi
    lock

    echo -n > /var/log/xray/access.log
    sleep 10
    process_ip_violations "vless" "/etc/xray/config.json" "/etc/vless/vless.db"

    unlock
}

function trip() {
    if is_locked; then
        echo "Another process is already running. Exiting..."
        exit 1
    fi
    lock

    echo -n > /var/log/xray/access.log
    sleep 10
    process_ip_violations "trojan" "/etc/xray/config.json" "/etc/trojan/trojan.db"

    unlock
}

while true; do
    vmip
    vlip
    trip
    sleep $CHECK_INTERVAL
done
