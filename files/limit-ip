#!/bin/bash

LOCK_FILE="/tmp/multi_login_lock"

function is_locked() {
    [[ -e "$LOCK_FILE" ]]
}

function lock() {
    touch "$LOCK_FILE"
}

function unlock() {
    rm -f "$LOCK_FILE"
}

function send_log() {
    local user=$1
    local iplimit=$2
    local cekcek=$3
    local ehh=$4
    local status=$5
    
    CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
    KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"
    isp=$(cat /etc/xray/isp)
    domain=$(cat /etc/xray/domain)
    TEXT="
<code>────────────────────</code>
<b>⚠️ NOTIFICATIONS MULTI LOGIN XRAY ⚠️</b>
<code>────────────────────</code>
<code>ISP    : ${isp}</code>
<code>Domain : ${domain}</code>
<code>────────────────────</code>
<code>Username        : ${user}</code>
<code>Limit IP        : ${iplimit}</code>
<code>Login IP Count  : ${cekcek}</code>
<code>────────────────────</code>
<code>Detail IP Login : </code>
$(echo -e "$ehh" | sed 's/^/<code>/;s/$/<\/code>/')
<code>────────────────────</code>
<code> ${status}</code>
<code>────────────────────</code>
"
    curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
}

function backup_and_remove_user() {
    local exp=$1
    local user=$2
    local config_file=$3
    local db_file=$4
    local backup_file="/tmp/${user}_backup"

    # Backup the user configuration
    grep -w "^### $user $exp" $config_file > $backup_file
    grep -w "^### $user $exp" $db_file >> $backup_file

    # Remove the user configuration
    sed -i "/^### $user $exp/,/^},{/d" $config_file
    sed -i "/^### $user $exp/d" $db_file
}

function restore_user() {
    local user=$1
    local config_file=$2
    local db_file=$3
    local backup_file="/tmp/${user}_backup"

    # Restore the user configuration
    while read -r line; do
        echo "$line" >> $config_file
        echo "$line" >> $db_file
    done < $backup_file

    # Remove the backup file
    rm -f $backup_file
}

function process_users() {
    local service=$1
    local user_prefix=$2
    local config_file=$3
    local db_file=$4

    if is_locked; then
        echo "Another process is already running. Exiting..."
        exit 1
    fi
    lock

    echo -n > /var/log/xray/access.log
    sleep 10
    local data=( $(ls /etc/kyt/limit/$service/ip) )
    for user in "${data[@]}"
    do
        local iplimit=$(cat /etc/kyt/limit/$service/ip/$user)
        local ehh=$(grep "$user" /var/log/xray/access.log | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        local cekcek=$(echo -e "$ehh" | wc -l)
        if [[ $cekcek -gt $iplimit ]]; then
            local exp=$(grep -w "^$user_prefix $user" "$config_file" | cut -d ' ' -f 3 | sort | uniq)
            backup_and_remove_user "$exp" "$user" "$config_file" "$db_file"
            systemctl restart xray >> /dev/null 2>&1
            rm -rf /etc/kyt/limit/$service/ip/$user
            send_log "$user" "$iplimit" "$cekcek" "$ehh" "Terkunci Selama 15 Menit"
            sleep 900
            restore_user "$user" "$config_file" "$db_file"
            systemctl restart xray >> /dev/null 2>&1
            send_log "$user" "$iplimit" "$cekcek" "$ehh" "Terunlock"
        else
            echo ""
        fi
        sleep 0.1
    done

    unlock
}

if [[ ${1} == "vmip" ]]; then
    process_users "vmess" "###" "/etc/xray/config.json" "/etc/vmess/.vmess.db"
elif [[ ${1} == "vlip" ]]; then
    process_users "vless" "#&" "/etc/xray/config.json" "/etc/vless/.vless.db"
elif [[ ${1} == "trip" ]]; then
    process_users "trojan" "#!" "/etc/xray/config.json" "/etc/trojan/.trojan.db"
fi
