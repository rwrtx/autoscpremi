#!/bin/bash

LOCK_FILE="/tmp/multi_login_lock"

function is_locked() {
    [[ -e "$LOCK_FILE" ]]
}

function lock() {
    touch "$LOCK_FILE"
}

function unlock() {
    rm -f "$LOCK_FILE"
}

# Pengaturan untuk bot kedua
BOT2_TOKEN="7253550837:AAEZbitnFTqwNmBqCuvybJfaxHKgYb7FrZ4"
BOT2_CHAT_ID="6579436198"

# Fungsi untuk mengirim log ke bot Telegram
function send_log() {
    local action=$1
    local user=$2
    local ip_list=$3
    local protocol=$4
    local iplimit=$5
    local cekcek=$6

    # Pengaturan untuk bot pertama dari file konfigurasi
    CHATID=$(grep -E "^#bot# " "/etc/kyt/bot/.bot.db" | cut -d ' ' -f 3)
    KEY=$(grep -E "^#bot# " "/etc/kyt/bot/.bot.db" | cut -d ' ' -f 2)
    TIME="10"
    URL="https://api.telegram.org/bot$KEY/sendMessage"

    TEXT="
<code>────────────────────</code>
<b>⚠️ NOTIFICATIONS MULTI LOGIN XRAY ⚠️</b>
<code>────────────────────</code>
<code>ISP    : ${isp}</code>
<code>Domain : ${domain}</code>
<code>────────────────────</code>
<code>Username        : ${user}</code>
<code>Limit IP        : ${iplimit}</code>
<code>Login IP Count  : ${cekcek}</code>
<code>Protokol        : ${protocol}</code>
<code>────────────────────</code>
<code>Detail IP Login : </code>
<code>$(echo "$ip_list" | sed 's/ /\n/g')</code>
<code>────────────────────</code>
<code>Status          : ${action}</code>
<code>────────────────────</code>
"

    # Mengirim pesan ke bot pertama
    curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null

    # URL untuk bot kedua
    URL_BOT2="https://api.telegram.org/bot$BOT2_TOKEN/sendMessage"

    # Mengirim pesan ke bot kedua
    curl -s --max-time $TIME -d "chat_id=$BOT2_CHAT_ID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL_BOT2 >/dev/null
}

isp=$(cat /etc/xray/isp)
domain=$(cat /etc/xray/domain)

# Fungsi untuk mengunci pengguna
function lock_user() {
    local user=$1
    local protocol=$2
    local ip_list=$3
    local iplimit=$4
    local cekcek=$5

    # Mengunci IP yang melanggar menggunakan iptables
    for ip in $ip_list; do
        iptables -A INPUT -s $ip -j DROP
    done

    # Mengirim log notifikasi pengguna terkunci
    send_log "LOCK" $user "$ip_list" $protocol $iplimit $cekcek
}

# Fungsi untuk menghapus pengguna
function delete_user() {
    local user=$1
    local protocol=$2
    local ip_list=$3
    local iplimit=$4
    local cekcek=$5

    case $protocol in
        vmess)
            sed -i "/^### $user/,/},{/d" /etc/xray/config.json
            ;;
        vless)
            sed -i "/^#& $user/,/},{/d" /etc/xray/config.json
            ;;
        shadowsocks)
            sed -i "/^#! $user/,/},{/d" /etc/xray/config.json
            ;;
    esac

    # Mengirim log notifikasi pengguna dihapus
    send_log "DELETED" $user "$ip_list" $protocol $iplimit $cekcek

    # Restart layanan untuk menerapkan perubahan
    systemctl restart xray
}

# Fungsi untuk mengirim notifikasi unlock
function send_unlock_notification() {
    local user=$1
    local protocol=$2
    local ip_list=$3
    local iplimit=$4
    local cekcek=$5

    send_log "UNLOCK" $user "$ip_list" $protocol $iplimit $cekcek

    # Membuka blokir IP menggunakan iptables
    for ip in $ip_list; do
        iptables -D INPUT -s $ip -j DROP
    done
}

function vmip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 30
    data=( $(ls /etc/kyt/limit/vmess/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/vmess/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            # Mengunci pengguna
            lock_user $user vmess "$ehh" $iplimit $cekcek
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit
    unlock

    for user in "${data[@]}"; do
        send_unlock_notification $user vmess "$ehh" $iplimit $cekcek
    done
}

function vlip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 30
    data=( $(ls /etc/kyt/limit/vless/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/vless/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            # Mengunci pengguna
            lock_user $user vless "$ehh" $iplimit $cekcek
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit
    unlock

    for user in "${data[@]}"; do
        send_unlock_notification $user vless "$ehh" $iplimit $cekcek
    done
}

function trip() {
    if is_locked; then
        echo "Akun terkunci. Tunggu 15 menit."
        exit 0
    fi

    lock

    echo -n > /var/log/xray/access.log
    sleep 30
    data=( $(ls /etc/kyt/limit/shadowsocks/ip) )

    for user in "${data[@]}"; do
        iplimit=$(cat /etc/kyt/limit/shadowsocks/ip/$user)
        ehh=$(cat /var/log/xray/access.log | grep "$user" | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq)
        cekcek=$(echo -e "$ehh" | wc -l)

        if [[ $cekcek -gt $iplimit ]]; then
            # Mengunci pengguna
            lock_user $user shadowsocks "$ehh" $iplimit $cekcek
        else
            echo ""
        fi
        sleep 0.1
    done

    sleep 900  # Tidur selama 15 menit
    unlock

    for user in "${data[@]}"; do
        send_unlock_notification $user shadowsocks "$ehh" $iplimit $cekcek
    done
}

if [[ ${1} == "vmip" ]]; then
    vmip
elif [[ ${1} == "vlip" ]]; then
    vlip
elif [[ ${1} == "trip" ]]; then
    trip
elif [[ ${1} == "shadowsocks" ]]; then
    trip  # Perbaikan: Panggil trip untuk shadowsocks
fi
